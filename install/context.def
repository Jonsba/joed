format-version := 0.1.0

doc-file-ext := tex
env-file-ext := tex
output := 'context ' .. _translated_document_
viewer := pdf
escape-table :=
	{'&', '\\&'}
	{'%', '\\%'}
	{'$', '\\$'}
	{'#', '\\#'}
	{'_', '\\_'}
	{'{', '\\{'}
	{'}', '\\}'}
	{'~', '\\textasciitilde{}'}
	{'^', '\\textasciicircum{}'}
	{'\\', '\\textbackslash{}'}
	{'\n', '\\\\'}

document-classes:
	article:
		generic-class := article
		backend-class := article
