environment:
	name: standard
	output:
		'\\startenvironment ' .. _name_
		'	\\setupinteraction[state=start]'
		'	\\placebookmarks[chapter,title,section,subsection][chapter,title,section][force=yes]'
		'\\stopenvironment'

styles:
	document:
		layout:
			_children_block_
		output:
			'\\environment {' _environment_name_ '}'
			'\\starttext'
			_children_block_
			'\\stoptext'
		default-child-style: paragraph
