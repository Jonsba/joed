format-version := 0.0.0

environment:
	output :=
		'body{'
		'	padding-top: 60px;'
		'	padding-bottom: 80px;'
		'}'
		'.fixed-header, .fixed-footer{'
		'	width: 100%;'
		'	position: fixed;'
		'	background: #333;'
		'	padding: 10px 0;'
		'	color: #fff;'
		'}'
		'.fixed-header{'
		'	top: 0;'
		'}'
		'.fixed-footer{'
		'	bottom: 0;'
		'}'
		'p {'
		'	margin-top: 2em;'
		'	margin-bottom: 2em;'
		'}'

styles:
	document:
		layout :=
			header
			_children_
			footer
		output :=
			'<link rel="stylesheet" href="document-environment.css">'
			header
			_children_
			footer

	style:
		name := header
		type := text_block
		output :=
			'<div class="fixed-header">'
			'<p>' .. _text_content_ .. '</p>'
			'</div>'

	style:
		name := footer
		type := text_block
		output :=
			'<div class="fixed-footer">'
			'<p>' .. _text_content_ .. '</p>'
			'</div>'
