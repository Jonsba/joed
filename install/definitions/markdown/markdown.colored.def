format-version := 0.0.0

environment:
	output :=
		'body{'
		'	padding-top: 60px;'
		'	padding-bottom: 80px;'
		'	background-color: powderblue;'
		'}'
		'.fixed-header, .fixed-footer{'
		'	width: 100%;'
		'	position: fixed;'
		'	background: #16d;'
		'	padding: 10px 0;'
		'}'
		'.fixed-header{'
		'	top: 0;'
		'}'
		'.fixed-footer{'
		'	bottom: 0;'
		'}'
		'h1 {'
		'	color: blue;'
		'}'
		'p {'
		'	color: red;'
		'	margin-top: 2em;'
		'	margin-bottom: 2em;'
		'}'

document-styles:
	properties:
		layout :=
			header
			_children_
			footer
		output :=
			'<link rel="stylesheet" href="document-environment.css">'
			header
			_children_
			footer
	styles:
		header:
			properties:
				type := text_block
				output :=
					'<div class="fixed-header">'
					'<p>' .. _text_content_ .. '</p>'
					'</div>'

		footer:
			properties:
				type := text_block
				output :=
					'<div class="fixed-footer">'
					'<p>' .. _text_content_ .. '</p>'
					'</div>'

