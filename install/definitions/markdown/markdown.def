format-version := 0.0.0

backend:
	doc-file-ext := md
	env-file-ext := css
	output := 'pandoc ' .. _translated_document_ .. ' -s --quiet -o ' .. _compiled_document_
	viewer := html
	escape-table :=
		{'\\', '\\\\'}
		{'`', '\\`'}
		{'*', '\\*'}
		{'_', '\\_'}
		{'{', '\\{'}
		{'}', '\\}'}
		{'[', '\\['}
		{']', '\\]'}
		{'(', '\\('}
		{')', '\\)'}
		{'#', '\\#'}
		{'+', '\\+'}
		{'-', '\\-'}
		{'.', '\\.'}
		{'!', '\\!'}
		{'<', '&lt;'}
		{'>', '&gt;'}
		{'\n', '  \n'}

document-styles:
	properties:
		layout :=
			_children_
		output :=
			_children_
		default-child-style := paragraph
	styles:
		paragraph:
			type := text_block
			output :=
				_text_content_
		section:
			child-of := document
			type := layout_block
			layout :=
				section.title
				_children_
			output :=
				'# ' .. section.title
				_children_
			default-child-style := paragraph
			styles:
				title:
					properties:
						type := text_block>title
						output :=
							_text_content_
