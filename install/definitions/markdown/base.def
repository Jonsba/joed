format-version: 1.0.0

backend:
	doc-file-ext: .md
	env-file-ext: .css
	output: 'pandoc ' .. _translated_document_ .. ' -s --quiet -o ' .. _compiled_document_
	viewer: html

-- TODO:
--   properties (space-before/after, formatting)
--   _text_ vs _formatted_text_ in text blocks

styles:

	document:
		layout:
			_children_
		output:
			_children_
		default-child-style: paragraph

	style:
		name: paragraph
		type: text_block
		output:
			_text_content_

	style:
		name: section
		child-of: document
		type: layout_block
		layout:
			section.title
			_children_
		output:
			'# ' .. section.title
			_children_
		default-child-style: paragraph
		styles:
			style:
				name: title
				type: text_block
				output:
					_text_content_
