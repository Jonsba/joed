format-version: 1.0.0

backend:
	doc-file-ext: .tex
	env-file-ext: .tex
	output: 'context ' .. _translated_document_
	viewer: pdf

-- TODO:
--   properties (space-before/after, formatting)
--   _text_ vs _formatted_text_ in text blocks

styles:

	document:
		layout:
			_children_
		output:
			'\\starttext'
			_children_
			'\\stoptext'
		default-child-style: paragraph

	style:
		name: paragraph
		type: text_block
		output:
			'{\\par ' .. _text_content_ .. '}'

	style:
		name: section
		child-of: document
		type: layout_block
		layout:
			section.title
			_children_
		output:
			'\\startsection[title={' .. section.title .. '}]'
			_children_
			'\\stopsection'
		default-child-style: paragraph
		styles:
			style:
				name: title
				type: text_block
				output:
					_text_content_
