version: 1.0.0

backend: /usr/bin/context

styles:
	document:
		layout:
			_children_blocks_
		output:
			"\\setupinteraction[state=start]"
			"\\placebookmarks[chapter,title,section,subsection][chapter,title,section][force=yes]"
			"\\starttext"
			_children_blocks_
			"\\stoptext"

	new-style:
		name: section
		child-of: document
		layout:
			_caption_block_
			_children_blocks_
		output:
			"\\startsection[title={" .. _caption_block_ .. "}]"
			_children_blocks_
			"\\stopsection"

	new-style:
		name: paragraph
		layout:
			_text_block_
		output:
			"{\\par" .. _text_block_ .. "}"
